<div class="row">

<!-- 商品列表页排序的下拉类别 -->
  <div>
    <div class="row">
      <div class="col-xs-6 col-md-s">
        <h3>商品</h3>
      </div>
      <div class="col-xs-6 col-md-s">
        <div class="dropdown clearfix pull-right" style="padding:10px; float:right">
          <button type="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            排序
            <span class="caret"></span>
          </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
              <li>
                <%= link_to("价格从低到高", products_path(:order => "by_lower_price")) %>
              </li>
              <li>
                <%= link_to("价格从高到低", products_path(:order => "by_upper_price")) %>
              </li>
              <li>
                <%= link_to("销量", products_path(:order => "by_upper_sale_quantity")) %>
              </li>
              <li>
                <%= link_to("发表时间", products_path) %>
              </li>
            </ul>
        </div>
      </div>
    </div>
  </div>

  <!-- 商品列表 -->
  <div class='row'>
  <% @products.each do |product| %>
    <div class="col-xs-6 col-md-3">
      <%= link_to product_path(product) do %>
        <% if product.image.present? %>
          <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
        <% else %>
          <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
        <% end %>
      <% end %>
      <a target="_blank"> <%= product.title %> </a>
      <a target="_blank"> $<%= product.price %> </a>
      <br>
      <a target="_blank"> 销量：<%= product.sale_quantity %> </a>
    </div>

  <% end %>
  </div>

</div>
