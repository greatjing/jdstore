<h2>Category List</h2>

<div class="pull-right" style="padding-bottom: 20px">
  <%= link_to("Add new category", new_admin_category_path, :class => "btn btn-default btn-sm") %>
</div>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Desctiption</th>
      <th width="100">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |c| %>
      <tr>
        <td>
          <%= c.id %>
        </td>
        <td>
          <%= c.name %>
        </td>
        <td>
          <%= c.desc %>
        </td>
        <td>
          <%= link_to("Edit", edit_admin_category_path(c)) %>|
          <%= link_to("Delete", admin_category_path(c), method: :delete, data: { confirm: "Are you sure?" } ) %>
        </td>
      </tr>
    <% end %>
  </tbody>


</table>
