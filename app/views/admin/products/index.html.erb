<h2>Product List</h2>

<div class="pull-right" style="padding-bottom: 20px">
  <%= link_to("Add new product", new_admin_product_path, :class => "btn btn-default btn-sm") %>
</div>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th width="220">Product Pic</th>
      <th>Name</th>
      <th>Price</th>
      <th width="100">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |p| %>
      <tr>
        <td>
          <%= p.id %>
        </td>
        <td>
          <%= link_to product_path(p) do %>
            <% if p.image.present? %>
              <%= image_tag(p.image.thumb.url, class: "thumbnail") %>
            <% else %>
              <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
            <% end %>
          <% end %>
        </td>
        <td>
          <%= p.title %>
        </td>
        <td>
          <%= p.price %>
        </td>
        <td>
          <%= link_to("Edit", edit_admin_product_path(p)) %>|
          <%= link_to("Delete", admin_product_path(p), method: :delete, data: { confirm: "Are you sure?" } ) %>
        </td>
      </tr>
    <% end %>
  </tbody>


</table>
