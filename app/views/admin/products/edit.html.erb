    <% end %> -->
    <% if @product.photos.present? %>
      <span>目前商品图</span> <br>
      <% @product.photos.each do |p| %>
        <%= image_tag p.image.thumb.url %><br>
      <% end %>
    <% end %>

    <!-- <div class="group">
      <%= f.input :image, as: :file %>
    </div> -->

    <div class="group">
      <%= f.label :image %><br>
      <%= f.file_field :imgae, :multiple => true, name: "photos[image][]" %>
    </div>

    <!--分类项 -->
    <div class="group">
      <%= select_tag(:category_id, options_for_select(@categories), :prompt => "选择类别") %>
    </div>
    <hr>
    <!-- <div class="form-group">
      <%= f.input :title, input_html: { class: "form-control" } %>
      <%= f.input :description, input_html: { class: "form-control" } %>
