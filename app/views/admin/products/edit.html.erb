      <%= f.input :quantity, input_html: { class: "form-control" } %>

      <% if @product.image.present? %>
        <span>目前商品图</span> <br>
        <%= image_tag(@product.image.thumb.url) %>
      <% end %>

      <%= f.input :image, as: :file %>
    </div> -->
    <%= f.submit "Update Product", class: "btn btn-primary", data: { disable_with: "Submiting..." } %>
  <% end %>
</div>
