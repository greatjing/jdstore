<div class="col-md-12 ">
  <h2>update product</h2>
  <hr>
  <%= simple_form_for [:admin,@product] do |f| %>
    <div class="group">
      <%= f.input :title %>
    </div>

    <div class="group">
      <%= f.input :description %>
    </div>

    <div class="group">
      <%= f.input :quantity %>
    </div>

    <div class="group">
      <%= f.input :price %>
    </div>

    <!-- <% if @product.image.present? %>
      <span>目前商品图</span> <br>
